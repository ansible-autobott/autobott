[Unit]
Description=Fe26 storage service
Documentation=https://github.com/AndresBott/Fe26
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User={{ fe26_config.user.name }}
Group={{ fe26_config.user.group }}
ExecStart={{ fe26_config.paths.binaries_dir }}/fe26-latest
Restart=on-failure
RestartSec=5
WorkingDirectory={{ fe26_config.paths.data_dir }}
Environment="FE26_LOGLEVEL={{ fe26_config.service.loglevel }}"
Environment="FE26_IP={{ fe26_config.service.bind_ip }}"
Environment="FE26_PORT={{ fe26_config.service.port }}"
Environment="FE26_ROOT={{ fe26_config.paths.data_dir }}"
StandardOutput=journal
StandardError=journal
SyslogIdentifier=fe26

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths={{ fe26_config.paths.data_dir }}

[Install]
WantedBy=multi-user.target





